<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign up</title>
    <link rel="shortcut icon" href="/public/images/home/logo-mobie.png" type="image/x-icon">

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <section class="vh-80" style="background-color: #ffffff">
      <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-80">
          <div
            class="row d-flex justify-content-center align-items-center h-100"
          >
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
              <div class="card" style="border-radius: 15px">
                <div class="card-body p-5">
                  <h4 class="text-uppercase text-center">Edit product</h4>

                  <form
                    method="post"
                    action="/posteditproduct?id=<%=productData._id%>"
                    enctype="multipart/form-data"
                  >
                    <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example1cg"
                        >Image</label
                      >
                      <input
                        type="file"
                        name="image"
                        value="/public/proimg/<%=productData.image%>"
                        class="form-control form-control"
                      />
                    </div>
                    <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example1cg"
                        >Name</label
                      >
                      <input
                        type="text"
                        name="name"
                        value="<%=productData.name %>"
                        class="form-control form-control"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="recipient-name" class="col-form-label"
                        >Category</label
                      >
                      <select
                        name="category"
                        id="new"
                        value="<%=productData.category %>"
                        class="form-select"
                        aria-label="Default select example"
                      >
                        <% categoryData.forEach((categoryData)=>{ %>
                        <option value="<%=categoryData.name%>">
                          <%=categoryData.name%>
                        </option>

                        <%})%>
                      </select>
                    </div>
                    <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example1cg"
                        >Description</label
                      >
                      <input
                        type="text"
                        name="description"
                        value="<%= productData.description%>"
                        class="form-control form-control"
                      />
                    </div>
                    <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example1cg"
                        >Brand</label
                      >
                      <input
                        type="text"
                        name="brand"
                        value="<%= productData.brand %>"
                        class="form-control form-control"
                      />
                    </div>
                    <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example1cg"
                        >stock</label
                      >
                      <input
                        type="text"
                        name="stock"
                        value="<%= productData.stock %>"
                        class="form-control form-control"
                      />
                    </div>
                    <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example1cg"
                        >Price</label
                      >
                      <input
                        type="text"
                        name="price"
                        value="<%= productData.price %>"
                        class="form-control form-control"
                      />
                    </div>
                    <div class="d-flex justify-content-center">
                      <button
                        type="submit"
                        class="btn btn-outline-info btn-block gradient-custom-4 text-body"
                      >
                        Update
                      </button>
                    </div>
                    <button
                      type="submit"
                      value="submit"
                      class="btn btn-outline-info btn-block gradient-custom-4 text-body"
                    >
                      <a href="/product">back</a>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script>
      if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
      }
    </script>
  </body>
</html>
