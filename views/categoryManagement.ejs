                <div class="container-fluid px-4">
                    <h1 class="mt-4">Category Management</h1>




                                   <!-- Button trigger modal -->

  
  
  <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Add category</button>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
       
        <div class="modal-body">
          <form action="/insertcategory" method="post">
           
            <div class="form-group">
              <label for="recipient-name" name="name" class="form-label"> Category name</label>
              <input type="text" class="form-control" name="name" id="recipient-name" required>
            </div>
            
         
         </div>
         <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Submit</button>
         </div>
      </form> 
      </div>
    </div>
  </div>
                    
                    

         <div class="col-lg-6 grid-margin stretch-card">
          <div class="card">
          <div class="card-body">
                            
                            
                            
          <table class="table">
           <thead>
             <tr>
                                    
              <th>Name</th>
               <th>Status</th>
                <th>Action</th>
              </tr>
              </thead>
              <tbody>
                                    
              <% categoryData.forEach((categorydata)=>{ %>
                                  
               <tr>
                                      
               <td><%=categorydata.name%></td>
                                      
               <td><%if(categorydata.status==true){%>
                  <p class = "badge badge-success">Active</p>
                  <%} else {%>
                  <p class = "badge badge-danger">Inactive</p>
                  <%}%>
                </td> 
  
                <td>
                                          
                <%if(categorydata.status==true){%>
                <a href="/categoryblock?id=<%=categorydata._id%>" ><button type="button" class="badge badge-danger ml-2"style="width:100px;">Block</button></a>
                                         
                <%} else {%>
                <a href="/categoryblock?id=<%=categorydata._id%>" ><button type="button" class="badge badge-success ml-2"style="width:100px;">Unblock</button></a>
                <%}%>
                                    
                <a href="/editcategory?id=<%= categorydata._id %>"><button type="button" class="badge badge-primary"style="width:100px;">Edit</button></a>



                   <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                     <div class="modal-dialog" role="document">
                      <div class="modal-content">
                                               
                        <div class="modal-body">
                        <form action="/editcategory" method="post">
                                                   
                         <div class="form-group">
                         <label for="recipient-name" name="name" class="form-label"> Category name</label>
                         <input type="text" class="form-control" name="name" id="recipient-name">
                         </div>
                                                    
                                                 
                          </div>
                          <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="submit" class="btn btn-primary">Submit</button>
                          </div>
                        </form> 
                        </div>
                      </div>
                    </div>


                                         

                     <a  href="/deletecategory?id=<%= categorydata._id %>"><button type="button" class="badge badge-warning"style="width:100px;">Delete</button></a>      
                        
                   </td>
                           
  
             </tr>
            <%})%>
             </tbody>
             </table>
            </div>
          </div>
