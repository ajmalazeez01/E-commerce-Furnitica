<body>
<h2 class="text-center text-uppercase" >Furnitica</h2>

   <h5 class="text-center " >SALES REPORT</h5>
   <h6 style="padding-bottom: 1%;"></h6>
   <% if(orderData!=null) { %>
    <table class="table table-bordered text-center" style="width:100%;">
      <thead>
        <tr>
          <th scope="col">Order ID</th>
          <th scope="col">Order Date</th>
          <th scope="col">Order Status</th>
          <th scope="col">Payment Method</th>
          <th scope="col">Total Price</th>
        </tr>
      </thead>
      <tbody>
        <% orderData.forEach((data)=>{ %>
           
         
        <tr scope="row">
          
          <td><%=data._id%></td>
          <% let date =data.orderDate %>
         <% const format = new Date(date  ); %>
         <% const todate = format.toLocaleDateString(); %>
          <td>  
            <%=todate%>
            </td>
            <td><%=data.orderStatus%></td>
          <td><%=data.paymentMethod%></td>
          <td>$<%=data.totalAmount%></td>
         
        </tr>
        <%})%>
      </tbody>
    </table>
    <%}%>
  </table>
    <div class="d-flex ">
      <div class="card">
        <div class="card-header">
          <h3>Total: <span>$<%= total %></span><span>     <a href="/csv_download?total=<%= total %>"><button class="btn btn-success" >Download</button></a>
          </span></h3>

        </div>
       
      </div>
    </div>
   
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"></script>
