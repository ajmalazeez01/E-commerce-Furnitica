        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="h-100 gradient-custom">
                        <div class="container py-5 h-100">
                          <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-lg-10 col-xl-8">
                              <div class="card mt-3" style="border-radius: 10px">
                                <div class="card-header px-4 py-5">
                                  <h5 class="text-muted mb-0">
                                    Product Details
                                  </h5>
                                </div>
                                <div class="card-body p-4">
                                  <div class="d-flex justify-content-between align-items-center mb-4">
                                    <p class="lead fw-normal mb-0" style="color: #a8729a">Receipt</p>
                                    <p class="small text-muted mb-0">Receipt Voucher : 1KAU9-84UIL</p>
                                  </div>
                      
                                  <div class="card shadow-0 border mb-4">
                                    <div class="card-body">
                                      <% productData.forEach((order)=>{ %>
                                      <div class="row">
                                        <div class="col-md-2">
                                          <img
                                            src="/public/proimg/<%=order.image%>"
                                            class="img-fluid"
                                            alt="furniture"
                                          />
                                        </div>
                                        <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center"
                                        >
                                          <p class="text-muted mb-0">
                                           
                                          </p>
                                        </div>
                                        <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center"
                                        >
                                          <p class="text-muted mb-0 small">
                                            <%= order.name %>
                                          </p>
                                        </div>
                                        <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center"
                                        >
                                          <p class="text-muted mb-0 small">
                                            <%= order.brand %>
                                          </p>
                                        </div>
                                        <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center"
                                        >
                                          <p class="text-muted mb-0 small">
                                            <%= order.productQty %>
                                          </p>
                                        </div>
                                        <div
                                          class="col-md-2 text-center d-flex justify-content-center align-items-center"
                                        >
                                          <p class="text-muted mb-0 small">
                                            ₹<%= order.total %>
                                          </p>
                                        </div>
                                      </div>
                                      <% }) %>
                                      <hr
                                        class="mb-4"
                                        style="background-color: #e0e0e0; opacity: 1"
                                      />
                                      <div class="d-flex justify-content-between pt-2">
                                            <p class="fw-bold mb-0">Order Details</p>
                                            <p class="text-muted mb-0">
                                              <span class="fw-bold me-4">Delivery Charges</span> Free
                                            </p>
                                          </div>
                      
                                          <div class="d-flex justify-content-between pt-2">
                                            <p class="text-muted mb-0">Invoice Number : 788152</p>
                                            <p class="text-muted mb-0">
                                              <span class="fw-bold me-4">Total</span> ₹
                                              <%= productData[0].totalAmount %>
                                            </p>
                                          </div>
                                          <div class="d-flex justify-content-between mb-5">
                                            <p class="text-muted mb-0">
                                              Address : <%= productData[0].address.addressline1 %>,<%= productData[0].address.addressline2 %>,<%= productData[0].address.district %>,<%= productData[0].address.state %>,<%= productData[0].address.country %>,PIN:<%= productData[0].address.pin %></p>
                                          </div>
                                      <div class="row d-flex align-items-center">
                                        <div class="col-md-2">
                                          <p class="text-muted mb-0 small">Track Order</p>
                                        </div>
                                        <div class="col-md-10">
                                          <div
                                            class="progress"
                                            style="height: 6px; border-radius: 16px"
                                          >
                                            <div
                                              class="progress-bar"
                                              role="progressbar"
                                              style="
                                                width: 5%;
                                                border-radius: 16px;
                                                background-color: #a8729a;
                                              "
                                              aria-valuenow="65"
                                              aria-valuemin="0"
                                              aria-valuemax="100"
                                            ></div>
                                          </div>
                                          <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">
                                              Out for delivary
                                            </p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">
                                              Delivered
                                            </p>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="continue__btn pt-3">
                                        <a href="/">Continue Shopping</a>
                                    </div>
                                </div>
                            </div>
                            </div>
                          </div>
                        </div>
                      </section>

                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
