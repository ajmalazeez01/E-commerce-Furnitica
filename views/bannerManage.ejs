        </div>
        <div class="modal-body">
            <form action="/banner" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <!-- <label for="exampleFormControlFile1">Example file input</label>
                  <input type="file" class="form-control-file" id="exampleFormControlFile1"> -->
                  <label for="exampleFormControlInput1">Banner Name</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name" name="name" required>
                  <label for="exampleFormControlInput1">Images</label>
                  <input type="file" class="form-control" id="exampleFormControlInput1" placeholder="images" name="image"  required>
                </div>
              
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </div>
      </div>
    </div>
  </div>



                    


  <div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Banner DataTable 
    </div>
    <div class="card-body">
       <% if(bannerDetails!=null){ %>
        <table id="dataTable" style="width: 100%;">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>image</th>
                    <th>Name</th>                     
                    <th>BLOCK/UNBLOCK</th>
                </tr>
            </thead>
            
            <tbody>
                <% bannerDetails.forEach((data,i)=>{ %>
              <tr>
                
                <th scope="row"><%= (i+1) %></th>
                <td> <img src="/public/proimg/<%=data.image[0] %>" alt="" style="width:50px;height:50px;"></td>
                
                    <td>
                        <%=data.name%>
                    </td>
                    
                <!-- <td>
                  <% if(data.status==true){ %>
                        <p class="text-success">Active</p>
                  <% } else { %>
                            <p class="text-danger">Blocked</p>
                  <% } %>
                            

                </td> -->

                <td>
                    <% if(data.status==true){ %>
                      <a href="/bannerblock?id=<%=data._id%>"  data-bs-toggle="modal" data-bs-target="#<%=data.name%>"  ><button type="button"  class="badge badge-success" style="width: 100px;">Block</button></a>
                      <% } else { %>
                           <a href="/bannerblock?id=<%=data._id%> "  data-bs-toggle="modal" data-bs-target="#<%=data.name%>"    ><button type="button"  class="badge badge-danger" style="width: 100px;">Unblock</button></a> 
                           <% } %>  
                        





          <!-- ------------------------------------------------------ -->
  <div class="modal fade " id="<%=data.name%>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Action</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
      
        <div class="modal-body">
                <p>Are you Sure You want to change <%=data.name%></p>
              </div>
              <div class="modal-footer">
                <%if(data.status==true){%>
                          <a href="/bannerblock?id=<%=data._id%>" type="button" class="btn btn-primary">Save changes</a>

                    <%} else {%>
                               <a href="/bannerblock?id=<%=data._id%> " type="button" class="btn btn-primary">Save changes</a>

                        <%}%>

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
      </div>
    </div>
  </div>

