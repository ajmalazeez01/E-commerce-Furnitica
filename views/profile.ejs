                <div class="collapse" id="collapseExample2">

                  <div class="acount head-acount">

                    <button type="button" class="btn btn-primary ml-5" data-toggle="modal" data-target="#exampleModal"
                      data-whatever="@getbootstrap">Add Address </button>


                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                      aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-body">
                            <form action="/profile" method="post">
                              <div class="form-group">
                                <label for="recipient-name" class="form-label">
                                  Name</label>
                                <input type="text" class="form-control" name="name" id="recipient-name" required />
                              </div>
                              <div class="form-group">
                                <label for="recipient-name" class="form-label">Address line1</label>
                                <input type="text" class="form-control" name="addressline1" id="recipient-name"
                                  required />
                              </div>
                              <div class="form-group">
                                <label for="recipient-name" class="form-label">Address line2</label>
                                <input type="text" class="form-control" name="addressline2" id="recipient-name"
                                  required />
                              </div>
                              <div class="form-group">
                                <label for="recipient-name" class="form-label">District</label>
                                <input type="text" class="form-control" name="district" id="recipient-name" required />
                              </div>
                              <div class="form-group">
                                <label for="recipient-name" class="form-label">State</label>
                                <input type="text" class="form-control" name="state" id="recipient-name" required />
                              </div>
                              <div class="form-group">
                                <label for="recipient-name" class="form-label">Country</label>
                                <input type="text" class="form-control" name="country" id="recipient-name" required />
                              </div>
                              <div class="form-group">
                                <label for="recipient-name" class="form-label">Pin code</label>
                                <input type="number" class="form-control" name="pin" id="recipient-name" required />
                              </div>
                              <div class="form-group">
                                <label for="recipient-name" class="form-label">Mobile</label>
                                <input type="number" class="form-control" name="mobile" id="recipient-name" required />
                              </div>

                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                  Close
                                </button>
                                <button type="submit" class="btn btn-primary">
                                  Submit
                                </button>
                              </div>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>

                    <% address.forEach(function(address) { %>


                      <div class="card ml-5 border-radius:2rem text-dark ">

                        <div class="card-body ">
                          <h5 class="card-title ">Address</h5>

                          <b>
                            <p>Name: <%=address.name%>
                            </p>
                          </b>
                          <b>
                            <p>Address line1: <%=address.addressline1%>
                            </p>
                          </b>
                          <b>
                            <p>Address line2: <%=address.addressline2%>
                            </p>
                          </b>
                          <b>
                            <p>District: <%=address.district%>
                            </p>
                          </b>
                          <b>
                            <p>State: <%=address.state%>
                            </p>
                          </b>
                          <b>
                            <p>Country: <%=address.country%>
                            </p>
                          </b>
                          <b>
                            <p>Pin code: <%=address.pin%>
                            </p>
                          </b>
                          <b>
                            <p>Mobile: <%=address.mobile%>
                            </p>
                          </b>

                          <a href="/editaddress?id=<%= address._id %>" class="btn btn-primary">Edit Address</a>


                          <a href="/deleteaddress?id=<%=address._id%>" class="btn btn-primary">Delete Address</a>
                        </div>
                      </div>

                      <% }) %>
                  </div>
                </div>


                <div class="order">
