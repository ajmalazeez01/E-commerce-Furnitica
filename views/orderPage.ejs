<body class="user-acount">



<body>


    <%- include('../middleware/layout/header.ejs') %>

    
    <section class="h-100 gradient-custom ">
        <div class="container py-5 h-100 ">
          <div class="row d-flex justify-content-center align-items-center h-100 text-dark">
            <div class="col-lg-10 col-xl-10">
              
              <div class="card mb-5" style="border-radius: 10px;">
            
             
                <% order.forEach(function(order) { %>

                <div class="card-body p-4">
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    
                    <% let date = order.orderDate %>
                    <% const format = new Date(date  ); %>
                    <% const todate = format.toLocaleDateString(); %>
                    <td><%=todate %></td>
                    
                    <p class="large text-muted mb-0"><span>Order ID -</span><%=order._id%></p>
                  </div>
                
                 
                  <div class="d-flex justify-content-between pt-2">
                    <p class="pt-2"><span>Status -</span><%=order.orderStatus%>  </p>
                    <h5 class="text-muted mb-0"><span class="fw-bold me-4">Totalâ‚¹</span> <%=order.totalAmount%>  </h5>
                  </div>
                  <p class="pt-2"><span>Payment method -</span><%=order.paymentMethod%>  </p>
                  <div class="d-flex justify-content-between pt-2">
                    <div></div>
    
                    
                    <a href="/orderdetails?id=<%=order._id%>" class="btn btn-secondary px-2">View details</a>
                    
                  </div>
                 
                </div>

                <% }) %>
              </div>
             
             
                <div class="d-flex justify-content-center">
                  <img class="img-fluid" style="width: 500px;" src="/Public/user/images/Empty order.png" alt="">
                </div>
                <!-- <div class="d-flex justify-content-center">
                    <h4><a href="/shop">Back to shop</a></h4>
                </div>
                -->
              
            </div>
          </div>
        </div>
      </section>


